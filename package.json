{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "samples/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "turbo": "^1.1.2"
  },
  "packageManager": "pnpm@6.31.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search",
        "react",
        "react-dom",
        "@types/react"
      ]
    }
  }
}
